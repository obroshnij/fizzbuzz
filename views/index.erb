<h1>FizzBuzz Game</h1>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <form method="get" action="/">
      <div class="input-group">
          <input type="text" name='number' class="form-control" placeholder="Input number to play game...">
          <span class="input-group-btn">
            <button class="btn btn-secondary btn-success" type="submit">Go!</button>
          </span>
      </div>
    </form>
    <table class="table table-hover table-inverse">
      <thead>
        <tr style='background-color: black; color:white'>
          <th>#</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <% @sequence.each do |key, value| %>
          <tr class='<%= fizz_css(value) %>' >
            <th scope="row"><%= key %></th>
            <td ><%= value %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

